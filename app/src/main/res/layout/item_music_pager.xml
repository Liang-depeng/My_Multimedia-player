<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/ic_music_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_videos"/>

    <LinearLayout
        android:id="@+id/item_linearlayout"
        android:layout_toRightOf="@+id/ic_music_pic"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/local_music_name"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="15dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/local_video_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="singer"
            android:textSize="10dp"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/local_music_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:text="mb"
        android:textSize="15dp"
        android:textColor="@android:color/black" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>